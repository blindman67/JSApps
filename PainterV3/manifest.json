{
    "name": "PainterV3",
    "short_name": "PV3",
    "start_url": "PainterV3.html",
    "display_override": ["fullscreen", "minimal-ui"],
    "display": "standalone",
    "background_color": "#000",
    "description": "2D game art editor",
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },
    "icons": [{
            "src": "icons/Icon.svg",
            "type": "image/svg",
            "sizes": "150x150"
        }, {
            "src": "icons/icon-128x128.png",
            "type": "image/png",
            "sizes": "128x128"
        }, {
            "src": "icons/icon-144x144.png",
            "type": "image/png",
            "sizes": "144x144"
        }, {
            "src": "icons/icon-152x152.png",
            "type": "image/png",
            "sizes": "152x152"
        }, {
            "src": "icons/icon192x192.png",
            "type": "image/png",
            "sizes": "192x192"
        }, {
            "src": "icons/icon-256x256.png",
            "type": "image/png",
            "sizes": "256x256"
        }
    ],
    "screenshots": [{
            "src": "icons/ScreenshotPainterV3.png",
            "sizes": "2560x1283",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Workspace and UI panels"
        },{
            "src": "icons/ScreenshotPainterV3_Timeline.png",
            "sizes": "2560x1283",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Workspace and UI panels"
        }
    ],
    "file_handlers_": [{
            "action": "/handlerURL_Audio",
            "accept": {
                "audio/wav": [".wav"],
                "audio/mpeg": [".mp3"],
                "audio/ogg": [".ogg"],
                "application/ogg": [".ogg"]
            }
        }, {
            "action": "/handlerURL_JSON",
            "accept": {
                "application/.json": [".json"]
            }
        }, {
            "action": "/handlerURL_Image",
            "accept": {
                "image/.png": [".png"],
                "image/.gif": [".gif"],
                "image/.jpg": [".jpg"],
                "image/.svg": [".svg"],
                "image/.jpeg": [".jpeg"],
                "image/.webp": [".webp"]
            }
        }, {
            "action": "/handlerURL_Video",
            "accept": {
                "image/.mpg": [".mpg"],
                "image/.mp4": [".mp4"],
                "image/.webm": [".webm"]
            }
        }
    ]

}
